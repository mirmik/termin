<Window x:Class="SceneApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SceneApp.Controls"
        Title="Scene Editor" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0">
            <Button Content="New Scene" Click="NewScene_Click" ToolTip="Create new empty scene"/>
            <Separator/>
            <Button Content="Add Cube" Click="AddCube_Click" ToolTip="Add cube entity"/>
            <Button Content="Add Sphere" Click="AddSphere_Click" ToolTip="Add sphere entity"/>
            <Button Content="Add Empty" Click="AddEmpty_Click" ToolTip="Add empty entity"/>
            <Separator/>
            <Button Content="Delete" Click="Delete_Click" ToolTip="Delete selected entity"/>
            <Separator/>
            <Button Content="Reset Camera" Click="ResetCamera_Click" ToolTip="Reset camera to default view"/>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" MinWidth="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="260" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Hierarchy -->
            <GroupBox Header="Hierarchy" Grid.Column="0" Margin="4">
                <controls:HierarchyPanel x:Name="HierarchyPanel"
                                         SelectionChanged="Hierarchy_SelectionChanged"/>
            </GroupBox>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Center: 3D Viewport -->
            <GroupBox Header="3D View" Grid.Column="2" Margin="4">
                <controls:SceneViewerControl x:Name="SceneViewer"/>
            </GroupBox>

            <!-- Splitter -->
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Right Panel: Inspector -->
            <GroupBox Header="Inspector" Grid.Column="4" Margin="4">
                <controls:InspectorPanel x:Name="InspectorPanel"/>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="EntityCountText" Text="Entities: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
