<UserControl x:Class="SceneApp.Controls.InspectorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="ContentPanel">
            <!-- Entity Name -->
            <GroupBox x:Name="EntityGroup" Header="Entity" Padding="4" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Name" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox x:Name="EntityNameBox" Grid.Column="1" TextChanged="EntityNameBox_TextChanged"/>
                </Grid>
            </GroupBox>

            <!-- Transform -->
            <GroupBox x:Name="TransformGroup" Header="Transform" Padding="4" Margin="0,4,0,0" Visibility="Collapsed">
                <StackPanel>
                    <!-- Position -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Position" VerticalAlignment="Center"/>
                        <TextBox x:Name="PosX" Grid.Column="1" Margin="2,0" LostFocus="Transform_Changed"/>
                        <TextBox x:Name="PosY" Grid.Column="2" Margin="2,0" LostFocus="Transform_Changed"/>
                        <TextBox x:Name="PosZ" Grid.Column="3" Margin="2,0" LostFocus="Transform_Changed"/>
                    </Grid>

                    <!-- Rotation -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Rotation" VerticalAlignment="Center"/>
                        <TextBox x:Name="RotX" Grid.Column="1" Margin="2,0" LostFocus="Transform_Changed"/>
                        <TextBox x:Name="RotY" Grid.Column="2" Margin="2,0" LostFocus="Transform_Changed"/>
                        <TextBox x:Name="RotZ" Grid.Column="3" Margin="2,0" LostFocus="Transform_Changed"/>
                    </Grid>

                    <!-- Scale -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Scale" VerticalAlignment="Center"/>
                        <TextBox x:Name="ScaleX" Grid.Column="1" Margin="2,0" LostFocus="Transform_Changed"/>
                        <TextBox x:Name="ScaleY" Grid.Column="2" Margin="2,0" LostFocus="Transform_Changed"/>
                        <TextBox x:Name="ScaleZ" Grid.Column="3" Margin="2,0" LostFocus="Transform_Changed"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Components -->
            <GroupBox x:Name="ComponentsGroup" Header="Components" Padding="4" Margin="0,4,0,0" Visibility="Collapsed">
                <StackPanel x:Name="ComponentsList"/>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
